@using BulkyBookWeb.Models
@model IEnumerable<BulkyBookWeb.Models.Category>

@{
    ViewData["Title"] = "Category Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>
    <br />

    <div class="row">
        @foreach (var category in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4">
                    <img src="/products/@category.Image" class="card-img-top category-img" alt="@category.Name" />

                    <div class="card-body">
                        <h5 class="card-title">@category.Name</h5>

                        <div class="btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .category-img {
        width: 80%;
        height: 200px; /* Set a fixed height */
        object-fit: cover; /* Ensures the image covers the area while maintaining aspect ratio */
    }
</style>
