@using BulkyBookWeb.Models
@model IEnumerable<Userclass>
@{
    ViewData["Title"] = "UserIndex";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> User List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="User" asp-action="UserCreate" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Userclass
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table table-borded table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Username
                </th>
                <th>
                    Password
                </th>
                <th>
                    Email
                </th>
                <th>
                    Phone
                </th>
                <th>
                    Action
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.Username
                    </td>
                    <td width="30%">
                        @obj.Password
                    </td>
                    <td width="30%">
                        @obj.Email
                    </td>
                    <td width="30%">
                        @obj.Phone
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="User" asp-action="UserEdit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>Edit
                            </a>
                            <a asp-controller="User" asp-action="UserDelete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i>Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>